<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imvItem"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="180dp"
        android:layout_height="140dp"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvItemName"
        app:layout_constraintTop_toBottomOf="@+id/imvItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#7a7a7a"
        android:text="Chicken tender (Boneless)"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tvItemWeight"
        app:layout_constraintTop_toBottomOf="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="#7a7a7a"
        android:layout_marginTop="8dp"
        android:text="net wt 500gm"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tvPrice"
        app:layout_constraintTop_toBottomOf="@+id/tvItemWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:text="260"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tvAddToCart"
        app:layout_constraintTop_toTopOf="@id/tvItemWeight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
        android:text="Add to Cart"
        android:layout_marginLeft="20dp"
        android:textAllCaps="true"

        android:paddingLeft="14sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="14sp"
        android:textSize="10sp"
        android:background="@drawable/bg_circular_red"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>